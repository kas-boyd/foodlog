<section class="hero is-primary is-link">
  <!-- Hero head: will stick at the top -->
  <div class="hero-head">
    <nav class="navbar">
      <div class="container">
        <div class="navbar-brand">
          <%= link_to root_path, class: "navbar-item" do %>
            <span class = "has textweight-bold is-size-4 ml-4">Foodlog</span>
          <%end%>
          <span class="navbar-burger" data-target="navbarMenuHeroA">
            <span></span>
            <span></span>
            <span></span>
          </span>
        </div>
        <div id="navbarMenuHeroA" class="navbar-menu">
          <div class="navbar-end">
            <%= link_to "Create new entry", new_entry_path, class: "navbar-link" %>
            <%= link_to "Create new goal", new_goal_path, class: "navbar-link" %>
          </div>
      </div>
    </nav>
  </div>

  <!-- Hero content: will be in the middle -->
  <div class="hero-body">
    <div class="container has-text-centered">
      <p class="title">
        <% if content_for(:title)%>
            <%= yield :title%>
        <% else %>
            Foodlog
        <%end%>
      </p>
    </div>
  </div>

</section>